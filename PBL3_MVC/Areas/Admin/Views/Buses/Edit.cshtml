@model PBL3_MVC.Data.Tables.Bus

@{
    ViewBag.Title = "Chỉnh sửa Xe";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Chỉnh sửa xe</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BusID)
        @Html.HiddenFor(model => model.BusNumber)
        @Html.HiddenFor(model => model.RegisterPerson)
        @Html.HiddenFor(model => model.RegDate)
        @Html.HiddenFor(model => model.LicenseDate)
        @Html.HiddenFor(model => model.NumberOfSeats)

        <div class="form-group">
            @Html.LabelFor(model => model.BusStationID, "Tên bến xe", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("BusStationID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BusStationID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BusName, "Tên xe", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BusName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BusName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Driver, "Tài xế", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Driver, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Driver, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success btn-default" style="margin:15px" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở lại danh sách xe", "Index")
</div>

<link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />
@section scripts{
    <script src="~/Scripts/jquery.datetimepicker.js"></script>
    <script>
        $(function () {
            $(".datetimepicker").datetimepicker(
                {
                    format: 'Y/m/d'
                });
        });
    </script>
}