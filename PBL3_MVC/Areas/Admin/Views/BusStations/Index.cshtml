@model IEnumerable<PBL3_MVC.Models.BusStationModel>

@{
    ViewBag.Title = "Quản lý bến xe";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Quản lý bến xe</h2>

<p>
    @Html.ActionLink("Thêm bến xe mới", "Create", "BusStations", new { area = "Admin" }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            ID Bến xe
        </th>
        <th>
            Tên Bến xe
        </th>
        <th>
            Mật khẩu đã được mã hóa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new {onclick = "return confirm('Bạn có chắc chắn muốn xóa không?');"})
        </td>
    </tr>
}

</table>
