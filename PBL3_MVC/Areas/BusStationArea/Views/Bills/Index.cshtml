@model IEnumerable<PBL3_MVC.Models.BillModel>

@{
    ViewBag.Title = "Quản lý Vé";
    Layout = "~/Areas/BusStationArea/Views/Shared/_BusStationLayout.cshtml";
}

<h2>Quản lý Vé</h2>

<table class="table">
    <tr>
        <th>
            ID Ghế
        </th>
        <th>
            Khách hàng
        </th>
        <th>
            Bến xe
        </th>
        <th>
            Tên xe
        </th>
        <th>
            Ghế số
        </th>
        <th>
            Điểm đi
        </th>
        <th>
            Điểm đến
        </th>
        <th>
            Thời gian đi
        </th>
        <th>
            Thời gian đến
        </th>
        <th>
            Giá vé
        </th>
        <th>
            Ngày đặt vé
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SeatID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BusStationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BusName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SeatNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departure)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartureTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DestinationTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        @*<td>
            @Html.ActionLink("Xóa", "Delete", new { id=item.Id, seatid = item.SeatID }, new { onclick = "return confirm('Bạn có chắc chắn muốn xóa không?');" })
        </td>*@
    </tr>
}

</table>
